#!/usr/bin/env bash
# encoding: UTF-8

export RUBYOPT='-W:no-deprecated -W:no-experimental'
export RUUUBY_FULL_DEBUG="f"

set -euo pipefail
IFS=$'\n\t'
set -vx

bundle exec rake compile:ruby_class_mods
bundle exec rake rspec_audit
bundle exec rake rspec_locale
bundle exec rake rspec_tech_debt
bundle exec rake rspec_integration
bundle exec rake rspec_unit
